// See https://containers.dev/implementors/json_reference/ for configuration reference
{
  "name": "Semaine app development container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "remoteUser": "node",
  "forwardPorts": [4200],
  "features": {
    "ghcr.io/devcontainers-extra/features/angular-cli:2": {},
    "ghcr.io/devcontainers-extra/features/pnpm:2": {},
    "ghcr.io/devcontainers-extra/features/supabase-cli:1": {},
    "ghcr.io/devcontainers-extra/features/starship:1": {},
    "ghcr.io/devcontainers/features/azure-cli:1": {},
    "ghcr.io/devcontainers/features/terraform:1": {}
  },
  "postCreateCommand": "grep -q 'starship init bash' ~/.bashrc || echo 'eval \"$(starship init bash)\"' >> ~/.bashrc",
  "customizations": {
    "vscode": {
      "extensions": [
        "Angular.ng-template",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "editorconfig.editorconfig",
        "stylelint.vscode-stylelint",
        "HashiCorp.terraform"
      ]
    }
  },
  "mounts": [
    "type=bind,source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/node/.ssh,readonly"
  ]
}
